<Window x:Class="VideoSubtitleGenerator.UI.Wpf.JobDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoSubtitleGenerator.UI.Wpf"
        mc:Ignorable="d"
        Title="Job Details" 
        Height="700" 
        Width="650"
        MinHeight="600"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Info Label Style -->
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Info Value Style -->
        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <StackPanel>
                <TextBlock x:Name="txtJobTitle"
                         Text="Job Details - Module.9.3.mpeg"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="#212121"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>

                <!-- ==================== SECTION 1: FILE INFORMATION ==================== -->
                <TextBlock Text="ðŸ“‹ File Information" 
                         Style="{StaticResource SectionHeader}"/>
                
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- File Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                 Text="File:"
                                 Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                 x:Name="txtFileName"
                                 Text="Module.9.3 Information Security Management"
                                 Style="{StaticResource InfoValue}"
                                 TextWrapping="Wrap"/>

                        <!-- File Path -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                 Text="Path:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                 x:Name="txtFilePath"
                                 Text="C:\TRY_CONVERT\video_file\Module.9.3.mpeg"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,10,0,0"
                                 TextWrapping="Wrap"
                                 Foreground="#757575"
                                 FontFamily="Consolas"
                                 FontSize="11"/>

                        <!-- File Size -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                 Text="Size:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                 x:Name="txtFileSize"
                                 Text="245 MB"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,10,0,0"/>

                        <!-- Duration -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                 Text="Duration:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                 x:Name="txtDuration"
                                 Text="23:45"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,10,0,0"/>

                        <!-- Format -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                 Text="Format:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                 x:Name="txtFormat"
                                 Text="MPEG"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,10,0,0"/>

                    </Grid>
                </Border>

                <!-- ==================== SECTION 2: PROCESSING DETAILS ==================== -->
                <TextBlock Text="âš™ï¸ Processing Details" 
                         Style="{StaticResource SectionHeader}"/>
                
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                 Text="Status:"
                                 Style="{StaticResource InfoLabel}"/>
                        <Border Grid.Row="0" Grid.Column="1"
                              Background="#9C27B0"
                              CornerRadius="12"
                              Padding="12,4"
                              HorizontalAlignment="Left">
                            <TextBlock x:Name="txtStatus"
                                     Text="Transcribing"
                                     FontSize="12"
                                     FontWeight="SemiBold"
                                     Foreground="White"/>
                        </Border>

                        <!-- Progress -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                 Text="Progress:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,15,10,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="1"
                                  Margin="0,15,0,0">
                            <TextBlock x:Name="txtProgress"
                                     Text="75%"
                                     Style="{StaticResource InfoValue}"
                                     FontSize="16"
                                     Foreground="#2196F3"
                                     Margin="0,0,0,5"/>
                            <Border Background="#E0E0E0"
                                  CornerRadius="10"
                                  Height="8"
                                  Margin="0,0,0,0">
                                <Border x:Name="progressFill"
                                      Background="#2196F3"
                                      CornerRadius="10"
                                      HorizontalAlignment="Left"
                                      Width="225"/>
                            </Border>
                        </StackPanel>

                        <!-- Start Time -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                 Text="Start Time:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,15,10,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                 x:Name="txtStartTime"
                                 Text="14:23:45"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,15,0,0"
                                 FontFamily="Consolas"/>

                        <!-- Elapsed -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                 Text="Elapsed:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                 x:Name="txtElapsed"
                                 Text="05:34"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,10,0,0"
                                 FontFamily="Consolas"/>

                        <!-- Est. Remaining -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                 Text="Est. Remaining:"
                                 Style="{StaticResource InfoLabel}"
                                 Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                 x:Name="txtEstRemaining"
                                 Text="02:15"
                                 Style="{StaticResource InfoValue}"
                                 Margin="0,10,0,0"
                                 FontFamily="Consolas"
                                 Foreground="#FF9800"/>

                        <!-- Separator -->
                        <Separator Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                 Margin="0,15,0,15"/>

                        <!-- Current Phase -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                 Text="Current Phase:"
                                 Style="{StaticResource InfoLabel}"/>
                        <TextBlock Grid.Row="6" Grid.Column="1"
                                 x:Name="txtCurrentPhase"
                                 Text="Whisper AI Transcription"
                                 Style="{StaticResource InfoValue}"
                                 Foreground="#2196F3"/>

                        <!-- Model & Language -->
                        <StackPanel Grid.Row="7" Grid.Column="1"
                                  Orientation="Horizontal"
                                  Margin="0,10,0,0">
                            <Border Background="#F5F5F5"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  CornerRadius="4"
                                  Padding="8,4"
                                  Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Model: "
                                             FontSize="12"
                                             Foreground="#757575"/>
                                    <TextBlock x:Name="txtModel"
                                             Text="small"
                                             FontSize="12"
                                             FontWeight="SemiBold"
                                             Foreground="#212121"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#F5F5F5"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  CornerRadius="4"
                                  Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Language: "
                                             FontSize="12"
                                             Foreground="#757575"/>
                                    <TextBlock x:Name="txtLanguage"
                                             Text="English"
                                             FontSize="12"
                                             FontWeight="SemiBold"
                                             Foreground="#212121"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </Grid>
                </Border>

                <!-- ==================== SECTION 3: DETAILED LOG ==================== -->
                <TextBlock Text="ðŸ“ Detailed Log" 
                         Style="{StaticResource SectionHeader}"/>
                
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="0"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>

                        <!-- Log Header -->
                        <Border Grid.Row="0"
                              Background="#F5F5F5"
                              BorderBrush="#E0E0E0"
                              BorderThickness="0,0,0,1"
                              Padding="15,10">
                            <TextBlock Text="Processing Log"
                                     FontSize="12"
                                     FontWeight="SemiBold"
                                     Foreground="#424242"/>
                        </Border>

                        <!-- Log Content -->
                        <ScrollViewer Grid.Row="1"
                                    VerticalScrollBarVisibility="Auto"
                                    Padding="15">
                            <TextBox x:Name="txtDetailedLog"
                                   IsReadOnly="True"
                                   BorderThickness="0"
                                   Background="Transparent"
                                   FontFamily="Consolas"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Text="[14:23:45] Job started&#x0a;[14:23:46] Converting to WAV format...&#x0a;[14:24:12] WAV conversion complete&#x0a;[14:24:13] Loading Whisper model (small)...&#x0a;[14:24:18] Model loaded successfully&#x0a;[14:24:18] Transcribing audio...&#x0a;[14:25:00] Processing segment 1/10...&#x0a;[14:25:30] Processing segment 2/10...&#x0a;[14:26:00] Processing segment 3/10...&#x0a;[14:26:30] Processing segment 4/10..."/>
                        </ScrollViewer>

                    </Grid>
                </Border>

                <!-- ==================== SECTION 4: OUTPUT FILES ==================== -->
                <TextBlock Text="ðŸ“ Output Files" 
                         Style="{StaticResource SectionHeader}"/>
                
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        
                        <!-- WAV File -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                     Text="WAV:"
                                     Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Column="1"
                                     x:Name="txtWavPath"
                                     Text="C:\Output\Module.9.3.wav"
                                     Style="{StaticResource InfoValue}"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="#757575"
                                     TextWrapping="Wrap"/>
                        </Grid>

                        <!-- SRT File -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                     Text="SRT:"
                                     Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Column="1"
                                     x:Name="txtSrtPath"
                                     Text="C:\Output\Module.9.3.srt"
                                     Style="{StaticResource InfoValue}"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="#757575"
                                     TextWrapping="Wrap"/>
                        </Grid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <Button Content="Open Output Folder"
                      Width="160"
                      Height="38"
                      Style="{StaticResource SecondaryButton}"
                      Margin="0,0,10,0"
                      Click="OpenOutputFolder_Click"/>
                <Button x:Name="btnRetry"
                      Content="Retry"
                      Width="100"
                      Height="38"
                      Style="{StaticResource SecondaryButton}"
                      Margin="0,0,10,0"
                      Click="Retry_Click"
                      Visibility="Collapsed"/>
                <Button Content="Close"
                      Width="100"
                      Height="38"
                      Style="{StaticResource PrimaryButton}"
                      Click="Close_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
