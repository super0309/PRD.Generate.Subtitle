<Window x:Class="VideoSubtitleGenerator.UI.Wpf.ProcessingModeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoSubtitleGenerator.UI.Wpf"
        mc:Ignorable="d"
        Title="Chọn Chế độ Xử lý" 
        Height="550" 
        Width="600"
        MinHeight="500"
        MinWidth="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- RadioButton Card Style -->
        <Style x:Key="CardRadioButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="CardBorder"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="20"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header with RadioButton Circle -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse x:Name="RadioCircle"
                                           Width="20" 
                                           Height="20"
                                           Stroke="#BDBDBD"
                                           StrokeThickness="2"
                                           Fill="Transparent"
                                           Margin="0,0,10,0"/>
                                    <Ellipse x:Name="RadioDot"
                                           Width="10"
                                           Height="10"
                                           Fill="#2196F3"
                                           Visibility="Collapsed"
                                           Margin="-15,5,15,0"/>
                                    <ContentPresenter Content="{TemplateBinding Content}"
                                                    VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Details -->
                                <ContentPresenter Grid.Row="1" 
                                                Content="{TemplateBinding Tag}"
                                                Margin="30,0,0,0"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="CardBorder" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="RadioCircle" Property="Stroke" Value="#2196F3"/>
                                <Setter TargetName="RadioDot" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="Chọn Chế độ Xử lý"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="#212121"
                         Margin="0,0,0,10"/>
                <TextBlock x:Name="txtDescription"
                         Text="Bạn sắp xử lý 10 tệp video. Vui lòng chọn chế độ xử lý bạn muốn sử dụng."
                         FontSize="13"
                         Foreground="#757575"
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30,20">
            <StackPanel>

                <!-- Sequential Mode Card -->
                <RadioButton x:Name="rbSequential"
                           GroupName="ProcessingMode"
                           IsChecked="True"
                           Style="{StaticResource CardRadioButton}">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Xử lý Tuần tự"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="#212121"
                                     VerticalAlignment="Center"/>
                            <Border Background="#2196F3"
                                  CornerRadius="10"
                                  Padding="8,2"
                                  Margin="10,0,0,0">
                                <TextBlock Text="Được đề xuất"
                                         FontSize="10"
                                         FontWeight="SemiBold"
                                         Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </RadioButton.Content>
                    <RadioButton.Tag>
                        <StackPanel>
                            <!-- Features -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="•" FontSize="14" Margin="0,0,8,0" Foreground="#424242"/>
                                <TextBlock Text="Xử lý từng tệp một" 
                                         FontSize="13" 
                                         Foreground="#424242"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="•" FontSize="14" Margin="0,0,8,0" Foreground="#424242"/>
                                <TextBlock Text="Sử dụng ít bộ nhớ hơn (~500MB)" 
                                         FontSize="13" 
                                         Foreground="#424242"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                                <TextBlock Text="•" FontSize="14" Margin="0,0,8,0" Foreground="#424242"/>
                                <TextBlock Text="Ổn định và đáng tin cậy hơn" 
                                         FontSize="13" 
                                         Foreground="#424242"/>
                            </StackPanel>

                            <!-- Time Estimate -->
                            <Border Background="#E3F2FD"
                                  BorderBrush="#2196F3"
                                  BorderThickness="1"
                                  CornerRadius="4"
                                  Padding="12,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⏱️" 
                                             FontSize="16" 
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock FontSize="13" Foreground="#1565C0">
                                        <Run Text="Thời gian ước tính:"/>
                                        <Run Text="~70 phút" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </RadioButton.Tag>
                </RadioButton>

                <!-- Parallel Mode Card -->
                <RadioButton x:Name="rbParallel"
                           GroupName="ProcessingMode"
                           Style="{StaticResource CardRadioButton}">
                    <RadioButton.Content>
                        <TextBlock Text="Xử lý Song song"
                                 FontSize="15"
                                 FontWeight="SemiBold"
                                 Foreground="#212121"/>
                    </RadioButton.Content>
                    <RadioButton.Tag>
                        <StackPanel>
                            <!-- Features -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="•" FontSize="14" Margin="0,0,8,0" Foreground="#424242"/>
                                <TextBlock Text="Xử lý nhiều tệp đồng thời" 
                                         FontSize="13" 
                                         Foreground="#424242"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="•" FontSize="14" Margin="0,0,8,0" Foreground="#424242"/>
                                <TextBlock Text="Sử dụng bộ nhớ cao hơn (~1GB mỗi công việc)" 
                                         FontSize="13" 
                                         Foreground="#424242"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                                <TextBlock Text="•" FontSize="14" Margin="0,0,8,0" Foreground="#424242"/>
                                <TextBlock Text="Nhanh hơn nhưng tốn tài nguyên" 
                                         FontSize="13" 
                                         Foreground="#424242"/>
                            </StackPanel>

                            <!-- Max Jobs Selector -->
                            <Border Background="#F5F5F5"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  CornerRadius="4"
                                  Padding="12,10"
                                  Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                             Text="Số công việc song song tối đa:"
                                             FontSize="13"
                                             Foreground="#424242"
                                             VerticalAlignment="Center"
                                             Margin="0,0,15,0"/>
                                    
                                    <ComboBox Grid.Column="1"
                                            x:Name="cmbMaxParallelJobs"
                                            Height="32"
                                            Width="80"
                                            HorizontalAlignment="Left"
                                            VerticalContentAlignment="Center"
                                            SelectedIndex="0">
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                    </ComboBox>
                                </Grid>
                            </Border>

                            <!-- Time Estimate -->
                            <Border Background="#E3F2FD"
                                  BorderBrush="#2196F3"
                                  BorderThickness="1"
                                  CornerRadius="4"
                                  Padding="12,8"
                                  Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⏱️" 
                                             FontSize="16" 
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock FontSize="13" Foreground="#1565C0">
                                        <Run Text="Thời gian ước tính:"/>
                                        <Run Text="~35 phút" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Warning -->
                            <Border Background="#FFF3E0"
                                  BorderBrush="#FFB300"
                                  BorderThickness="1"
                                  CornerRadius="4"
                                  Padding="12,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠️" 
                                             FontSize="16" 
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock FontSize="13" Foreground="#E65100">
                                        <Run Text="Yêu cầu:"/>
                                        <Run Text="~2GB RAM khả dụng" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </RadioButton.Tag>
                </RadioButton>

                <!-- Remember Choice -->
                <CheckBox x:Name="chkRememberChoice"
                        Content="Ghi nhớ lựa chọn của tôi"
                        FontSize="13"
                        Foreground="#424242"
                        Margin="5,10,0,0"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="30,15">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <Button Content="Hủy bỏ"
                      Width="100"
                      Height="40"
                      Style="{StaticResource SecondaryButton}"
                      Margin="0,0,10,0"
                      Click="CancelButton_Click"/>
                <Button Content="Bắt đầu Xử lý"
                      Width="140"
                      Height="50"
                      Style="{StaticResource PrimaryButton}"
                      Click="StartButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
